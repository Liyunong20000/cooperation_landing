<launch>

  <!-- AGV1 platform -->
  <include  file="$(find aibot_hw)/launch/chassis_hw.launch" />

  <!-- static punlisher TF landing gear frame-->
  <node pkg="tf" type="static_transform_publisher" name="landing_gear_broadcaster" args="0 0 0.120 3.1415 0 0 /extend_front_link  /landing_gear_frame 50" />
  <!-- static publisher TF camera frame-->
  <node pkg="tf" type="static_transform_publisher" name="land_camera_upward_broadcaster" args="0.093 0 -0.011 0 0 3.1415 /landing_gear_frame  /land_camera_upward_frame 50" />
  <!-- static publisher TF optical camera frame-->
  <node pkg="tf" type="static_transform_publisher" name="land_camera_upward_optical_broadcaster" args="0 0 0 -1.5707 0 0 /land_camera_upward_frame  /land_camera_upward_optical_frame 50" />
  <!-- USB camera -->
  <node name="usb_cam" pkg="usb_cam" type="usb_cam_node" output="screen" >
    <param name="video_device" value="/dev/video1" />
    <param name="image_width" value="640" />
    <param name="image_height" value="480" />
    <param name="framerate" value="30.0" />
    <param name="pixel_format" value="yuyv" />
    <param name="color_format" value="yuv422p" />
    <param name="camera_frame_id" value="/land_camera_upward_optical_frame" />
    <param name="io_method" value="mmap"/>
    <param name="camera_info_url" value="file://$(find cooperation_landing)/config/camera_info/ELP-L100/480P/calibrationdata_1/ost.yaml" />
    <remap from="usb_cam/image_raw" to= "land_camera_upward/image_raw"/>
    <remap from="usb_cam/camera_info" to= "land_camera_upward/camera_info"/>
  </node>
  <!-- Landing Tracking Motion -->
    <include file="$(find apriltag_ros)/launch/continuous_detection.launch">
    <arg name="camera_name" value="/land_camera_upward" />
    <arg name="image_topic" value="image_raw" />
  </include>
  <rosparam command="load" file="$(find cooperation_landing)/config/apriltag/tags.yaml" ns="/apriltag_ros_continuous_node"/>
  <!-- TODO -->

</launch>
