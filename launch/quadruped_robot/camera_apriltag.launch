<?xml version="1.0" encoding="utf-8"?>
<launch>

  <!-- USB camera -->
  <node name="usb_camera_upward" pkg="usb_cam" type="usb_cam_node" output="screen" >
    <param name="video_device" value="/dev/video0" />
    <param name="image_width" value="1280" />
    <param name="image_height" value="720" />
    <param name="pixel_format" value="yuyv" />
    <param name="color_format" value="yuv422p" />
    <param name="camera_frame_id" value="usb_cam" />
    <param name="io_method" value="mmap"/>
    <param name="camera_info_url" value="file://$(find cooperation_landing)/config/camera_info/ELP-L100/720P/calibrationdata/ost.yaml" />
  </node>
    <node name="image_view" pkg="image_view" type="image_view" respawn="false" output="screen">
    <remap from="image" to="/usb_camera_upward/image_raw"/>
    <param name="autosize" value="true" />
  </node>

  <!-- Apriltag detection -->
  <include file="$(find apriltag_ros)/launch/continuous_detection.launch">
    <arg name="camera_name" value="/usb_camera_upward" />
    <arg name="image_topic" value="image_raw" />
  </include>
  <rosparam command="load" file="$(find cooperation_landing)/config/apriltag/tags.yaml" ns="/apriltag_ros_continuous_node"/>

